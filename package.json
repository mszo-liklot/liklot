{
  "name": "crypto-tracker",
  "version": "1.0.0",
  "description": "Cryptocurrency Price Tracking Platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:mapping": "node tests/mapping-verification.js",
    "test:exchanges": "node tests/exchange-integration.js",
    "test:strategy": "node tests/improvement-strategy.js",
    "test:all": "npm run test:mapping && npm run test:exchanges && npm run test:strategy",
    "structure": "tree /f /a || find . -type f -name '*.js' | head -20",
    "health": "curl -s http://localhost:3000/health || echo 'Server not running'",
    "init": "node init.js",
    "db:schema": "echo 'Run: psql -d crypto_tracker -f database/postgresql_schema.sql'",
    "exchanges": "node -e \"const em = require('./src/services/ExchangeManager'); const e = new em(); console.log('Active exchanges:', e.getActiveExchanges().join(', '))\"",
    "check": "npm run test:all && npm run health"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "redis": "^4.6.7",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  }
}
